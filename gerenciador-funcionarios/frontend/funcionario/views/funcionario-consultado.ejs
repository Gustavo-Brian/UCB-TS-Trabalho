<!DOCTYPE html>
<!-- Define o tipo do documento como HTML5 -->
<html lang="pt-BR">
<!-- Define o idioma da página como português do Brasil -->

<head>
    <meta charset="UTF-8">
    <!-- Define a codificação de caracteres como UTF-8 para suportar acentuação -->

    <title>Funcionário Consultado</title>
    <!-- Título da aba do navegador -->

    <link rel="stylesheet" href="/stylesheets/funcionarios.css">
    <!-- Importa o arquivo de estilos CSS específico para essa página -->

    <link rel="icon" href="/images/img1.jpg" type="image/png">
    <!-- Define o ícone da aba do navegador (favicon) -->
</head>

<body>
<!-- Corpo da página -->

<div class="logo-container">
    <!-- Container para exibir o logotipo da empresa -->
    <img src="/images/img1.jpg" alt="Logo da Empresa">
</div>

<h1>Funcionário Consultado</h1>
<!-- Título principal da página -->

<table>
    <!-- Tabela com os dados do funcionário consultado -->
    <thead>
    <!-- Cabeçalho da tabela -->
    <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>Email</th>
        <th>Nascimento</th>
        <th>Admissão</th>
        <th>Localidade</th>
        <th>Ativo</th>
        <th>Ações</th>
    </tr>
    </thead>

    <tbody>
    <% funcionarios.forEach(funcionario => { %>
        <tr>
            <td><%= funcionario.nome %></td>
            <td><%= funcionario.cpf %></td>
            <td><%= funcionario.email %></td>
            <td><%= funcionario.dataNascimento %></td>
            <td><%= funcionario.dataAdmissao %></td>
            <td><%= funcionario.localidade %></td>
            <td><%= funcionario.ativo ? "Sim" : "Não" %></td>
            <td>
                <a href="/funcionario/<%= funcionario.email %>/perfil" class="btn">
                    <img src="/images/img3.jpg" alt="Ver Perfil" class="icon-action">
                </a>
            </td>
        </tr>
    <% }); %>
    </tbody>


</table>

</body>
</html>
