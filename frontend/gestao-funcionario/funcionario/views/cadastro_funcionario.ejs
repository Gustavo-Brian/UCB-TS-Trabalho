<!-- Declaração do tipo de documento e idioma -->
<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <!-- Configuração de caracteres -->
    <meta charset="UTF-8" />
    
    <!-- Título da página -->
    <title>Funcionário Consultado</title>
    
    <!-- Link para o arquivo CSS -->
    <link rel="stylesheet" href="/stylesheets/cadastro_funcionario.css" />
    
    <!-- Ícone da página -->
    <link rel="icon" href="/images/img1.jpg" type="image/png" />
  </head>
  <body>
    <!-- Container do formulário -->
    <div class="form-wrapper">
      <!-- Painel esquerdo com imagem e botão de login -->
      <div class="left-panel">
        <!-- Imagem de boas-vindas -->
        <img src="/images/img6.jpg" alt="Imagem de boas-vindas" />
        
        <!-- Título do painel esquerdo -->
        <h2>Bem-vindo de volta</h2>
        
        <!-- Mensagem para login -->
        <p>Já possui uma conta? Faça o login aqui.</p>
        
        <!-- Botão para redirecionar ao login -->
        <button type="button" onclick="window.location.href='/login';">
          Login
        </button>
      </div>

      <!-- Painel direito com formulário -->
      <div class="right-panel">
        <!-- Título do formulário -->
        <h2>Cadastro de Funcionário</h2>

        <!-- Formulário de cadastro -->
        <form
          id="cadastro-form"
          class="form"
          method="POST"
          action="/funcionario/cadastrar"
        >
          <!-- Campo para nome completo -->
          <div class="input-group">
            <label for="nome">Nome Completo:</label>
            <input
              type="text"
              id="nome"
              name="nome"
              required
              pattern="[A-Za-zÀ-ÖØ-öø-ÿ\s]+"
              title="Digite seu nome completo sem números ou caracteres especiais"
              placeholder="Ex: João da Silva"
            />
          </div>

          <!-- Campo para e-mail -->
          <div class="input-group">
            <label for="email">E-mail:</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
              title="Digite um e-mail válido, como exemplo@email.com"
              placeholder="exemplo@email.com"
            />
          </div>

          <!-- Campo para senha -->
          <!--
          <div class="input-group">
            <label for="senha">Senha:</label>
            <input
              type="password"
              id="senha"
              name="senha"
              required
              pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$"
              title="A senha deve ter pelo menos 8 caracteres, incluindo letras maiúsculas, minúsculas e números."
              placeholder="Mínimo 8 caracteres, com letras e números"
            />
          </div>
          -->

          <!-- Campo para confirmar senha -->
          <!--
          <div class="input-group">
            <label for="confirma_senha">Confirmar Senha:</label>
            <input
              type="password"
              id="confirma_senha"
              name="confirma_senha"
              required
              pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$"
              title="A senha deve ter pelo menos 8 caracteres, incluindo letras maiúsculas, minúsculas e números."
              placeholder="Confirme sua senha"
            />
          </div>
          -->

          <!-- Campo para CPF -->
          <div class="input-group">
            <label for="cpf">CPF:</label>
            <input
              type="text"
              id="cpf"
              name="cpf"
              required
              placeholder="000.000.000-00"
              pattern="[0-9]{3}\.[0-9]{3}\.[0-9]{3}-[0-9]{2}"
              title="Digite o CPF no formato 000.000.000-00"
            />
          </div>

          <!-- Campo para localidade -->
          <div class="input-group">
            <label for="localidade">Localidade (Cidade e Estado):</label>
            <input
              type="text"
              id="localidade"
              name="localidade"
              required
              pattern="[A-Za-zÀ-ÖØ-öø-ÿ\s]+"
              title="Digite apenas letras. Exemplo: Brasília DF"
              placeholder="Ex: Brasília DF"
            />
          </div>

          <!-- Campo para data de nascimento -->
          <div class="input-group">
            <label for="dataNascimento ">Data de Nascimento:</label>
            <input
              type="date"
              id="dataNascimento"
              name="dataNascimento"
              required
              max="<%= new Date().toISOString().split('T')[0] %>"
            />
          </div>

          <!-- Botão de cadastro -->
          <div
            class="input-group"
            style="grid-column: span 2; text-align: center"
          ><button type="submit" class="submit-btn">Cadastrar</button>

          </div>
        </form>

        <!-- Mensagens do servidor -->
        <% if (error) { %>
        <!-- Exibe mensagem de erro -->
        <div id="error-message" style="color: red"><%= error %></div>
        <% } %> 
        <% if (success) { %>
        <!-- Exibe mensagem de sucesso -->
        <div id="success-message" style="color: green"><%= success %></div>
        <% } %>
      </div>
    </div>

    <!-- Script para funcionalidades adicionais -->
    <script src="/js/cadastro_funcionario.js"></script>
  </body>
</html>
